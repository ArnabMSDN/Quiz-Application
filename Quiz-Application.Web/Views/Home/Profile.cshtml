@model Quiz_Application.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="w3-container w3-content" style="max-width:900px;margin-top:80px">
    <div class="row">
        <div class="w3-col m12">
            <div class="w3-card-4 w3-round w3-white">
                <div class="w3-container w3-blue"><h2>Edit Profile</h2></div>
                <form asp-action="Profile" class="w3-container">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p class="w3-center">
                        <img src="https://www.w3schools.com/w3images/avatar3.png" class="w3-circle" style="height:106px;width:106px" alt="Avatar" id="imgProfile">
                    </p>
                    <p>
                        <b><label asp-for="Name" class="w3-text-blue"></label></b>
                        <input asp-for="Name" class="w3-input w3-border" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </p>
                    <p>
                        <b>
                            <label asp-for="Email" class="w3-text-blue"></label>
                        </b>
                        <input asp-for="Email" class="w3-input w3-border" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </p>
                    <p>
                        <b>
                            <label asp-for="Phone" class="w3-text-blue"></label>
                        </b>
                        <input asp-for="Phone" class="w3-input w3-border" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </p>
                    <p>
                        <b>
                            <label asp-for="Candidate_ID" class="w3-text-blue"></label>
                        </b>
                        <input asp-for="Candidate_ID" class="w3-input w3-border" />
                        <span asp-validation-for="Candidate_ID" class="text-danger"></span>
                    </p>
                    <p>
                        <b>
                            <label asp-for="Role" class="w3-text-blue"></label>
                        </b>
                        <input asp-for="Role" class="w3-input w3-border" />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </p>
                    <p>
                        <button type="submit" class="w3-btn w3-blue"><i class="fa fa-save"></i> Save</button>
                    </p>
                </form>
                <br />
            </div>
        </div>
    </div>
</div>
<br />
